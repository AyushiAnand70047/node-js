<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Home Page</title>
</head>

<body class="bg-light">
  <%- include('./partials/nav') %>

  <div class="container mt-4">
    <% if (!user) { %>
      <div class="alert alert-info text-center" role="alert">
        Welcome, Guest User! Please <a href="/user/signin" class="alert-link">sign in</a> to access more features.
      </div>
    <% } else { %>
      <div class="alert alert-success text-center" role="alert">
        Welcome back, <strong><%= userName %></strong>! ðŸŽ‰
      </div>
    <% } %>

    <!-- Blogs are always visible -->
    <div class="row g-4">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4">
          <div class="card shadow-sm h-100">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text text-muted">
                <%= blog.createdAt ? blog.createdAt.toDateString() : '' %>
              </p>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View Blog</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>Blog Page</title>
</head>

<body class="bg-light">
  <%- include('./partials/nav') %>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card shadow-lg border-0 rounded-3">

            <!-- Top bar with Back Button (left) and Author Info (right) -->
            <div class="d-flex justify-content-between align-items-center p-3">
              <a href="/" class="btn btn-outline-secondary btn-m">‚Üê Back to Home</a>
              <div class="d-flex align-items-center">
                <img src="<%= blog.createdBy.profileImageURL %>" class="rounded-circle me-2" width="40" height="40">
                <span class="fw-semibold">
                  <%= blog.createdBy.fullName %>
                </span>
              </div>
            </div>

            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover"
              style="height: 350px; object-fit: cover;">

            <div class="card-body p-4">
              <h1 class="card-title mb-3 text-center">
                <%= blog.title %>
              </h1>
              <hr>
              <div class="card-text fs-5" style="white-space: pre-wrap;">
                <%= blog.body %>
              </div>
            </div>

            <div class="container m-3">
              <h1>Comments</h1>
              <% if(locals.user) {%>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                  <div class="m-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">
                    <button class="btn btn-primary mt-3" type="submit">Add</button>
                  </div>
                </form>
                <% } %>
                  <div class="m-3">
                    <h5 class="mb-3">Comments(<%= comments.length %>)</h5>
                    <div class="list-group">
                      <% comments.forEach(comment=> { %>
                        <div class="list-group-item d-flex align-items-start">
                          <img src="<%= comment.createdBy.profileImageURL %>" class="rounded-circle me-3 border"
                            width="50" height="50" alt="User Avatar">
                          <div class="flex-grow-1">
                            <h6 class="mb-1 fw-semibold">
                              <%= comment.createdBy.fullName %>
                            </h6>
                            <p class="mb-1">
                              <%= comment.content %>
                            </p>
                            <small class="text-muted">
                              <%= comment.createdAt ? comment.createdAt.toDateString() : '' %>
                            </small>
                          </div>
                        </div>
                        <% }) %>
                    </div>
                  </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>